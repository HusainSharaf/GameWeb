<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Memory_end">

    <ImageView
        android:id="@+id/imageView15"
        android:src="@drawable/textbox"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#FFEB3B"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:text="GameWeb is a free website that contains
both entertaining and educational games designed for kids under the age of 10.
Our mission is to provide entertainment and joy to the user. We greatly care about
the satisfaction of the user and wish to hear feedback." />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:text="ABOUT GAMEWEB" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_corners_pink"
        android:textSize="30sp"
        android:text="BACK" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />


</RelativeLayout>