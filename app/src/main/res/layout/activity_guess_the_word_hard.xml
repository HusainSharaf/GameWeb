<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff00"
    tools:context=".Guess_the_word_hard">

    <Button
        android:id="@+id/button"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:fontFamily="casual"
        android:text="NAIL"
        android:textSize="50sp"
        android:background="@drawable/rounded_corners_red"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@id/button"
        android:fontFamily="casual"
        android:text="WRENCH"
        android:background="@drawable/rounded_corners_blue20"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="480dp"
        android:fontFamily="casual"
        android:text="HAMMER"
        android:textSize="40sp"
        android:background="@drawable/rounded_corners_green2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="480dp"
        android:layout_toRightOf="@id/button"
        android:fontFamily="casual"
        android:text="SCREW DIVER"
        android:background="@drawable/rounded_corners_yellow"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/wrench2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:textSize="40sp"
        android:background="@drawable/rounded_corners_yellow"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:text="" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_marginStart="300dp"
        android:text="NEXT>>"
        android:textSize="20sp"
        android:background="@drawable/rounded_corners_pink"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"
        android:layout_marginStart="20dp"
        android:text="BACK"
        android:textSize="20sp"
        android:background="@drawable/rounded_corners_orange"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_corners_darkgreen"
        android:textSize="40sp"
        android:paddingTop="10dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:text="7 seconds left " />

</RelativeLayout>