<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gamewebbackground"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="serif-monospace"
        android:text="Welcome"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="230dp"
        android:fontFamily="serif-monospace"
        android:text="to Game"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:fontFamily="serif-monospace"
        android:text="Web"
        android:layout_toRightOf="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="130dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:src="@drawable/logo2"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginStart="80dp"
        android:layout_marginTop="430dp"
        android:src="@drawable/androidrobot"
        android:scaleType="fitXY"
        android:rotation="30"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="400dp"
        android:layout_marginStart="180dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="To join click on the button below." />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="25sp"
        android:background="@drawable/rounded_corners_red"
        android:text="Join GameWeb now"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp"
        />


    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#4CAF50"
        android:text="About GameWeb" />



</RelativeLayout>