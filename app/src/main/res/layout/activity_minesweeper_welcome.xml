<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grassbackground"
    tools:context=".Minesweeper_welcome">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:text="Welcome"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="cursive"
        android:text="to minesweeper"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!--<ImageView
        android:src="@drawable/androidrobot"
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_marginTop="260dp"
        android:layout_marginStart="30dp"
        android:rotation="30"
        tools:srcCompat="@tools:sample/avatars" />-->


    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text=" 4 X 4"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_marginTop="220dp"
        android:background="@drawable/rounded_corners_yellowhalf"
        android:drawableRight="@drawable/next_icon"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="6 X 5"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_below="@id/button"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_yellowhalf"
        android:drawableRight="@drawable/next_icon"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="8 X 6"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_below="@id/button2"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_yellowhalf"
        android:drawableRight="@drawable/next_icon"
        />

    <ImageView
        android:src="@drawable/back"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView3"
        android:src="@drawable/bomb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginTop="550dp"
        android:layout_marginStart="300dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>