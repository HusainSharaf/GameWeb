<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebackground"
    tools:context=".Sign_Register">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="30sp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="@drawable/rounded_corners_signin"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="30sp"
        android:layout_below="@id/button"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:textColor="#9C27B0"
        android:background="@drawable/rounded_corners_register"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/logo2"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:layout_marginTop="240dp"
        android:layout_marginStart="160dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="240dp"
        android:layout_marginStart="0dp"
        android:layout_toRightOf="@id/textView"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:src="@drawable/androidrobot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="470dp"
        android:rotation="30"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to this app? You can Register here"
        android:textSize="20sp"
        android:layout_marginTop="440dp"
        android:layout_marginStart="30dp"
        android:textColor="#FFFFFF"/>


    <ImageView
        android:src="@drawable/back"
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>